<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="377dp"
            android:layout_height="75dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/nom" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="180dp" android:layout_marginEnd="101dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="101dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:hint="@string/nom"/>
    <EditText
            android:layout_width="377dp"
            android:layout_height="75dp"
            android:inputType="text"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="280dp" android:layout_marginEnd="101dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="101dp"
            app:layout_constraintHorizontal_bias="0.494" android:id="@+id/prenom" android:hint="@string/prenom"/>
    <EditText
            android:layout_width="377dp"
            android:layout_height="75dp"
            android:inputType="datetime|date"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="372dp" android:layout_marginEnd="101dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="101dp"
            app:layout_constraintHorizontal_bias="0.494" android:id="@+id/date" android:hint="@string/date"/>
    <AutoCompleteTextView
            android:layout_width="376dp"
            android:layout_height="63dp" android:id="@+id/role"
            android:text="@string/role" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="468dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"/>
    <Button
            android:text="@string/confirm_buton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/confirm_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="35dp" android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>